
<turbo-frame id="comment-form-container">
  <!-- Aquí se cargará el formulario de comentario -->

<%= form_with model: [ @daily, @daily.comments.build ] do |form| %>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="actions">
    <%= form.submit "Update Comment" %>
  </div>
<% end %>

<%= link_to 'Back', @publication %>
</turbo-frame>