<h1>New Comment</h1>

<%= form_with model: [@publication, @comment], local: true do |form| %>
  <div class="form-group">
    <%= form.label :content, "Your Comment" %>
    <%= form.text_area :content, class: "form-control" %>
  </div>
  
  <%= form.submit "Submit", class: "btn btn-primary" %>
<% end %>
